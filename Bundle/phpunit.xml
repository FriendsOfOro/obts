<?xml version="1.0" encoding="UTF-8"?>

<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "true"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "false"
    syntaxCheck                 = "false"
    bootstrap                   = "bootstrap.php.cache">
    <testsuites>
        <testsuite name="Oro Bug Tracking System Functional Test Suite">
            <directory>../src/Oro/Bundle/BugTrackingSystemBundle/Tests/Functional</directory>
        </testsuite>
        <testsuite name="Oro Bug Tracking System Unit Test Suite">
            <directory>../src/Oro/Bundle/BugTrackingSystemBundle/Tests/Unit</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>../src/Oro</directory>
        </whitelist>
    </filter>
</phpunit>