<div class="widget-content">
    {% if saved is defined and saved %}
        {% set issueLinkingWidgetComponentOptions = { wid: app.request.get('_wid') } %}
        <span data-page-component-module="orobugtrackingsystem/js/app/components/issue-linking-widget-component"
              data-page-component-options="{{ issueLinkingWidgetComponentOptions|json_encode }}"></span>
    {% else %}
        {% if not form.vars.valid and form.vars.errors|length %}
            <div class="alert alert-error">
                <div class="message">
                    {{ form_errors(form) }}
                </div>
            </div>
        {% endif %}
        <div class="form-container">
            <form id="{{ form.vars.name }}" action="{{ formAction }}" method="post">
                <fieldset class="form form-horizontal">
                    <div class="span6">
                        {{ form_row(form.relatedIssue) }}
                    </div>
                    <div class="span6">
                        {{ form_rest(form) }}
                    </div>
                    <div class="widget-actions form-actions">
                        <button class="btn" type="reset">{{ 'Cancel'|trans }}</button>
                        <button class="btn btn-primary" type="submit">
                            {{ 'oro.bugtrackingsystem.issue.button.link_entity'|trans({'%entityName%': 'oro.bugtrackingsystem.issue.entity_label'|trans}) }}
                        </button>
                    </div>
                </fieldset>
            </form>
            {{ oro_form_js_validation(form) }}
        </div>
    {% endif %}
</div>
