{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% set gridName = 'issues_grid' %}
{% set pageTitle = 'oro.bugtrackingsystem.issue.entity_plural_label'|trans %}

{% block navButtons %}
    {% include 'OroImportExportBundle:ImportExport:buttons.html.twig' with {
        entity_class: entity_class,
        exportProcessor: 'oro_bug_tracking_system',
        exportTemplateProcessor: 'oro_bug_tracking_system',
        importProcessor: 'oro_bug_tracking_bundle.add_or_replace',
        importTitle: 'oro.importexport.import.entity'|trans({'%entityName%': 'oro.bugtrackingsystem.issue.entity_plural_label'|trans}),
        dataGridName: gridName
    } %}

    {% if resource_granted('oro_bug_tracking_system_issue_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path' : path('oro_bug_tracking_system_issue_create'),
                'entity_label': 'oro.bugtrackingsystem.issue.entity_label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}